<h2><%= @bottle.name %></h2>
<h3><%= @bottle.variety %></h3>
<h3><%= @bottle.year.year %></h3>
<h3><%= @bottle.producer %></h3>
<h3>$<%= @bottle.price_cents %></h3>

<%= render @bottle.comments %>

<div>
<%= link_to "Add Tasting Notes", new_bottle_comment_path(@bottle) %>
</div>

<% if logged_in? %>
<% if @bottle.user_id == current_user.id %>

<%= link_to 'Edit', edit_bottle_path(@bottle)%>
<%= link_to 'Delete', bottle_path(@bottle), method: :delete%>
<% end %>
<% end %>
